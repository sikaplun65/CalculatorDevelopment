<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="digit_button_style">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/one_fourth_margin</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="operator_button_style">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/button_wight</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:layout_marginStart">@dimen/half_margin</item>
        <item name="android:layout_marginEnd">@dimen/one_fourth_margin</item>
        <item name="android:layout_marginTop">@dimen/one_fourth_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>